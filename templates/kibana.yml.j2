#Default Kibana configuration for opendistro

server.port: 5601
server.host: {{ ansible_host }}

elasticsearch.url: https://{{ ansible_host }}:9200
elasticsearch.ssl.verificationMode: none
elasticsearch.username: {{ ElasticsearchKibanaUsername }}
elasticsearch.password: {{ ElasticsearchKibanaPassword }}
elasticsearch.requestHeadersWhitelist: ["securitytenant","Authorization"]

opendistro_security.multitenancy.enabled: true
opendistro_security.multitenancy.tenants.preferred: ["Private", "Global"]
opendistro_security.readonly_mode.roles: ["kibana_read_only"]